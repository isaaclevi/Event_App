<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.isaaclevi.event_app.EditEventFragment">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal|center_vertical">

        <TextView
            android:id="@+id/edit_event_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="Event Name"/>

        <TextView
            android:id="@+id/edit_user_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="User Name"/>

        <EditText
            android:id="@+id/edit_event_explanation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="Event Explanation"/>

        <TextView
            android:id="@+id/edit_event_address_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Address" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/edit_event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Edit Date"
                    android:ems="10"
                    android:layout_margin="15dp"/>
                <TextView
                    android:id="@+id/edit_event_date_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="Date"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <Button
                    android:id="@+id/edit_event_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Edit Time"
                    android:ems="10"
                    android:layout_margin="15dp"/>
                <TextView
                    android:id="@+id/edit_event_time_view"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="Time"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/update_event_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Update Event"
            android:layout_margin="15dp"/>

    </LinearLayout>

</FrameLayout>
